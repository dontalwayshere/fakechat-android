<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey"
    android:orientation="vertical">

    <include layout="@layout/include_normal_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/userinfo_avatar_rl"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@drawable/menu_list_ll_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        android:text="头像"
                        android:textColor="@color/colorText" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/userinfo_avatar_sdv"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        app:placeholderImage="@drawable/avatar_def" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorMineDivider" />

                <RelativeLayout
                    android:id="@+id/userinfo_nickname_rl"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/menu_list_ll_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        android:text="昵称"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/userinfo_nickname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:text="CrazyWah"
                        android:textColor="@color/colorBottomTitleText"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorMineDivider" />

                <RelativeLayout
                    android:id="@+id/userinfo_username_rl"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/menu_list_ll_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="Fake微信号"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/userinfo_username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:text="CrazyWah"
                        android:textColor="@color/colorBottomTitleText"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorMineDivider" />

                <RelativeLayout
                    android:id="@+id/userinfo_gender_rl"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/menu_list_ll_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="性别"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/userinfo_gender_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:text="男"
                        android:textColor="@color/colorBottomTitleText"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorMineDivider" />

                <RelativeLayout
                    android:id="@+id/userinfo_tel_rl"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/menu_list_ll_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="电话号码"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/userinfo_tel_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:text="88888888888"
                        android:textColor="@color/colorBottomTitleText"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorMineDivider" />

                <RelativeLayout
                    android:id="@+id/userinfo_birthday_rl"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/menu_list_ll_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="生日"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/userinfo_birthday_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:text="1997年7月1日"
                        android:textColor="@color/colorBottomTitleText"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorMineDivider" />

                <RelativeLayout
                    android:id="@+id/userinfo_region_rl"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/menu_list_ll_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="地址"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/userinfo_region_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:text="中国 广州"
                        android:textColor="@color/colorBottomTitleText"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorMineDivider" />

                <RelativeLayout
                    android:id="@+id/userinfo_signature_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_list_ll_bg"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:text="个性签名"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/userinfo_signature_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:text="中国好，香港好"
                        android:textColor="@color/colorBottomTitleText"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>